{
  "compilerOptions": {
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "./src",

    "moduleResolution": "NodeNext",
    "rewriteRelativeImportExtensions": true,
    "outDir": "dist"
  }
}
